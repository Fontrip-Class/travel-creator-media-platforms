# 🚀 旅遊平台生產環境配置
# 請根據實際環境修改以下配置

# ============================================
# 資料庫配置
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=travel_platform_prod
DB_USERNAME=travel_platform_user
DB_PASSWORD=your_strong_password_here
DB_CONNECTION_TIMEOUT=30
DB_QUERY_TIMEOUT=60
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1000

# ============================================
# JWT配置
# ============================================
JWT_SECRET=your_production_jwt_secret_key_here_change_this
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=86400

# ============================================
# 應用配置
# ============================================
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_NAME="旅遊創作者媒體平台"
APP_VERSION=2.0.0
APP_TIMEZONE=Asia/Taipei

# ============================================
# 檔案上傳配置
# ============================================
UPLOAD_MAX_SIZE=52428800
UPLOAD_PATH=uploads/
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,mp4,mov,avi,mp3,wav,pdf,doc,docx
UPLOAD_CHUNK_SIZE=1048576
UPLOAD_RETRY_ATTEMPTS=3

# ============================================
# 日誌配置
# ============================================
LOG_LEVEL=info
LOG_PATH=logs/
LOG_MAX_FILES=30
LOG_MAX_SIZE=10485760
LOG_FORMAT=json

# ============================================
# 郵件配置
# ============================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="旅遊平台系統"

# ============================================
# 快取配置
# ============================================
CACHE_DRIVER=redis
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_PASSWORD=
CACHE_DATABASE=0
CACHE_TTL=3600
CACHE_PREFIX=travel_platform_

# ============================================
# 速率限制配置
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_STORAGE=redis

# ============================================
# 安全配置
# ============================================
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800
SESSION_TIMEOUT=7200
CSRF_PROTECTION=true
XSS_PROTECTION=true

# ============================================
# 監控配置
# ============================================
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=300
PERFORMANCE_MONITORING=true
ERROR_REPORTING=true
SLOW_QUERY_THRESHOLD=1000

# ============================================
# 備份配置
# ============================================
BACKUP_ENABLED=true
BACKUP_PATH=backups/
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_COMPRESSION=true

# ============================================
# CDN配置
# ============================================
CDN_ENABLED=false
CDN_URL=https://cdn.your-domain.com
CDN_API_KEY=your_cdn_api_key

# ============================================
# 第三方服務配置
# ============================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=ap-northeast-1
AWS_BUCKET_NAME=your_s3_bucket

# ============================================
# 開發者配置
# ============================================
DEVELOPER_MODE=false
API_DOCUMENTATION_ENABLED=false
DEBUG_BAR_ENABLED=false
TESTING_ENABLED=false
